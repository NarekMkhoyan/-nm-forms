{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}